{% set cssVersion = '0.0.1' %}
{% set jsVersion = '0.0.1' %}

<!doctype html>

<!--[if lt IE 7]> <html class="lt-ie10 lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="lt-ie10 lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="lt-ie10 lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9]>    <html class="lt-ie10" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--> <html lang="en"> <!--<![endif]-->

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{% if metaTitle is defined %}{{ metaTitle }} {{ craft.config.titleBullet }} {% endif %}{{ siteName }}{% if homeTitle is defined %} {{ craft.config.titleBullet }} {{ homeTitle }}{% endif %}</title>
	{% if metaDescription is defined %}<meta name="description" content="{{ metaDescription }}">{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
	<meta name="author" content="{{ siteName }}">

	{% include '_includes/_favicons' %}

	{% if canonicalUrl is defined %}<link rel="canonical" href="{{ canonicalUrl }}">{% endif %}

	{#{% include '_includes/_socialMediaHead' %}#}
	{% include '_includes/_stylesheets' %}
	{% include '_includes/_scriptsHead' %}
</head>

<body itemscope itemtype="http://schema.org/{% if pageSchema is defined %}{{ pageSchema }}{% else %}WebPage{% endif %}">
<script>
	var bdy = document.getElementsByTagName('body');
	bdy[0].className = 'js';
</script>

<div id="top"></div>

<div id="site">

	<div id="page"{% if pageClass is defined %} class="{{ pageClass }}"{% endif %}>
		<header id="masthead" itemscope itemtype="http://schema.org/WPHeader">
			<div class="masthead__in">
				<h1 id="logo">
					<a href="{{ siteUrl }}" title="{{ craft.config.homeLinkTitle }}">
						<img src="/ui/img/logo.png" alt="{{ siteName }}">
					</a>
				</h1>
				<p id="masthead__menu-trigger"><a href="#menu__mobile" title="Jump to navigation menu"><span>Menu</span></a></p>

				{% include '_includes/_menu' with { id: 'menu__desktop', class: 'menu__desktop' } %}
			</div>
		</header>
	
		<main id="content"{% if contentClass is defined %} class="{{ contentClass }}"{% endif %} itemprop="mainContentOfPage">
			{% block content %}
			{% endblock %}
		</main>

		{% include '_includes/_menu' with { id: 'menu__mobile', class: 'menu__mobile' } %}
	
		{% include '_includes/_footer' %}

	</div>{# /#page #}

</div>{# /#site #}

{% include '_includes/_scriptsFooter' %}

</body>
</html>
