<nav id="{{ id }}" class="menu__primary{% if class is defined %} {{ class }}{% endif %}" itemscope itemtype="http://schema.org/SiteNavigationElement">
	<ul>
		<li class="link__home">
			<a href="/" title="Home"{% if craft.request.getSegment(1) == '' %} class="current"{% endif %} itemprop="url">
				<span>Home</span>
			</a>
		</li>
		
		{# TEMPLATE for nav
		{% for about in craft.entries.section('about') %}
		<li>
			<a href="{{ about.url }}" title="{{ about.heading }}"{% if craft.request.getSegment(1) == 'about' %} class="current"{% endif %} itemprop="url">
				<span class="title" itemprop="name">{{ about.title }}</span>
				<span class="description" itemprop="description">{{ about.summary }}</span>
			</a>
		</li>
		{% endfor %}

		{% for services in craft.entries.section('servicesLanding') %}
